<?xml version="1.0" encoding="utf-8" standalone="no"?>

<extension group="content" method="upgrade" type="plugin" version="3.0">
    <name>Content - CjBlog</name>
    <creationDate>2022-Dec-29</creationDate>
    <author>Maverick</author>
    <authorEmail>support@corejoomla.com</authorEmail>
    <authorUrl>http://www.corejoomla.com</authorUrl>
    <copyright>All rights reserved by www.corejoomla.com 2009-12.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>5.0.0</version>
    <description>CjBlog content plugin - adds support for adding cjblog styling to articles.</description>
    <files>
        <filename>cjblog.xml</filename>
        <filename plugin="cjblog">cjblog.php</filename>
        <filename>index.html</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_cjblog.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="use_cjblog_content" type="radio" class="btn-group btn-group-yesno" default="1" description="Adds CjBlog information to Joomla articles" label="Enable CjBlog Content">
                    <option value="1">JENABLED</option>
                    <option value="0">JDISABLED</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>

